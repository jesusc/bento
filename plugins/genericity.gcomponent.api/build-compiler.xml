<project name="project" default="default">
    <description>
		Package the genericity compiler for ATL into a jar file.
    </description>


	<target name="generate-jar">
		<jar destfile="lib/genericity-atl.jar">
			<fileset dir="../../compiler/genericity.compiler.atl/eclectic-gen" >
				<include name="eclectic/adapt_*"/>
				<include name="eclectic/gen_atl*"/>
				<include name="eclectic/ocl2ocl*"/>
				<include name="eclectic/callexpr*"/>
			    <include name="eclectic/copy_helpers*"/>
				<include name="eclectic/composed_genericity*"/>

				<!--
				<include name="eclectic/class2reference*"/>
				-->
				<include name="eclectic/virtual_class*"/>
				<include name="eclectic/class_merge*"/>
								
				<!-- type check classes -->
				<include name="eclectic/typecheck_atl*"/>			
				<include name="eclectic/atl_patterns*"/>
				<include name="eclectic/attr_typecheck_atl*"/>				
				
				
			</fileset>

			<fileset dir="../../compiler/genericity.compiler.atl/bin" >
				<include name="genericity/typecheck/atl/TypeCheckLauncher*"/>
				<include name="genericity/compiler/atl/Class2Reference*"/>
				<include name="genericity/compiler/atl/VirtualClasses*"/>
				<include name="genericity/compiler/atl/ClassMerge*"/>
								
				<include name="genericity/typing/atl_types/*"/>
				<include name="genericity/typing/atl_types/impl/*"/>
				<include name="genericity/typing/atl_types/util/*"/>

				<include name="genericity/typing/atl_types/annotations/*"/>
				<include name="genericity/typing/atl_types/annotations/impl/*"/>
				<include name="genericity/typing/atl_types/annotations/util/*"/>
								
			</fileset>

			<!-- NO BCEL IN THE PATH...
			<classfileset dir="../genericity.compiler.atl/eclectic-gen" >
				<root classname="eclectic.rewrite_class1" includes="eclectic/rewrite_class1*" />
			</classfileset>
			-->
		</jar>

		<jar destfile="lib/genericity-instantiation.jar">
			<fileset dir="../../compiler/genericity.compiler.atl/eclectic-gen" >
				<include name="eclectic/propagate_instantiation*"/>
			</fileset>

			<!-- NO BCEL IN THE PATH...
			<classfileset dir="../genericity.compiler.atl/eclectic-gen" >
				<root classname="eclectic.rewrite_class1" includes="eclectic/rewrite_class1*" />
			</classfileset>
			-->
		</jar>

	</target>
	
	<target name="default" depends="generate-jar">
	</target>
	
    <target name="depends">
    </target>

</project>
