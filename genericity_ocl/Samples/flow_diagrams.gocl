
--
-- Constraints associated to the FlowDiagram concept
--
constraints for FD {

	context FlowDiagram 
		inv: self.isFinalMandatory implies FD!FinalTask.allInstances()->select(f | f.isMandatory)->size() > 0  
		description: "Check that..."
			
	context Task
		inv: self.name <> ''
		description: "Task should have a proper name"
	
}  

