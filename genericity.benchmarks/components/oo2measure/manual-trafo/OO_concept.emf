@namespace(uri="simple_OO_concept", prefix="simple_OO_concept")
package simple_OO_concept;

abstract class NamedElement {
   attr String name;
}

class Package extends NamedElement {
   val Class[*] classes;
}

class Class extends NamedElement, Type {
  attr boolean     isAbstract;
  val Attribute[*] attributes;
  val Operation[*] operations;
  ref Class[*]     parents; 
}

class Attribute extends NamedElement {
  ref Type[0..1] type;
}

class Type {}

class Operation extends NamedElement {}


